{
  "name": "mcp-router",
  "version": "0.1.0",
  "private": true,
  "description": "MCP Router - 统一管理多个 Model Context Protocol 服务器",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/ui": "^1.2.0",
    "electron": "^36.9.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "pinia": "^2.2.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}

